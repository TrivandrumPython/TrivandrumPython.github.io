<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }} — {{ site.name }}</title>
  <meta name="description" content="{{ title }} — {{ site.description }}">

  <!-- Canonical URL -->
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">

  <!-- Open Graph -->
  <meta property="og:title" content="{{ title }} — {{ site.name }}">
  <meta property="og:description" content="{{ title }} — {{ site.description }}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:type" content="event">
  <meta property="og:image" content="{{ site.url }}/images/tripy-og-img.png">
  <meta property="og:site_name" content="{{ site.fullName }}">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="{{ title }} — {{ site.name }}">
  <meta name="twitter:description" content="{{ title }} — {{ site.description }}">
  <meta name="twitter:image" content="{{ site.url }}/images/tripy-og-img.png">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&family=JetBrains+Mono:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&display=swap" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <link rel="stylesheet" href="{{ '/css/style.css' | url }}">
  <link rel="icon" type="image/png" href="{{ '/images/tripy-icon.png' | url }}">

  <!-- Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Event",
    "name": "{{ title }}",
    "description": "{{ title }} — {{ site.description }}",
    "startDate": "{{ date | machineDate }}",
    "eventAttendanceMode": "https://schema.org/OfflineEventAttendanceMode",
    "eventStatus": "https://schema.org/EventScheduled",
    "location": {
      "@type": "Place",
      "name": "{{ venue }}",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Trivandrum",
        "addressRegion": "Kerala",
        "addressCountry": "IN"
      }
    },
    "organizer": {
      "@type": "Organization",
      "name": "{{ site.fullName }}",
      "url": "{{ site.url }}"
    }
  }
  </script>
</head>
<body>
  {% include "header.njk" %}

  <main>
    <article class="event-page">
      <div class="container">
        <a href="{{ '/events/' | url }}" class="event-page__back">← All Events</a>

        <header class="event-page__header">
          <div class="event-page__badges">
            <span class="badge badge--{{ type }}">{{ type | replace("-", " ") }}</span>
            {% if date | isFuture %}
            <span class="badge badge--next">Upcoming</span>
            {% endif %}
          </div>

          <h1 class="event-page__title">{{ title }}</h1>

          <div class="event-page__meta">
            <div class="event-page__meta-item">
              <strong>Date</strong>
              <span>{{ date | readableDate }}</span>
            </div>
            <div class="event-page__meta-item">
              <strong>Time</strong>
              <span>{{ time }}</span>
            </div>
            <div class="event-page__meta-item">
              <strong>Venue</strong>
              <span>{{ venue }}</span>
            </div>
            {% if attendees %}
            <div class="event-page__meta-item">
              <strong>Attendees</strong>
              <span>{{ attendees }}</span>
            </div>
            {% endif %}
          </div>
        </header>

        {% if talks and talks.length > 0 %}
        <section class="event-page__talks">
          <h2>Talks</h2>
          <div class="event-page__talk-list">
            {% for talk in talks %}
            <div class="event-page__talk">
              <h3>{{ talk.title }}</h3>
              {% if talk.speaker %}
              <span class="event-page__speaker">by {{ talk.speaker }}</span>
              {% endif %}
            </div>
            {% endfor %}
          </div>
        </section>
        {% endif %}

        <section class="event-page__body">
          {{ content | safe }}
        </section>

        {% if tags and tags.length > 0 %}
        <div class="event-page__tags">
          {% for tag in tags %}
          <span class="tag">{{ tag }}</span>
          {% endfor %}
        </div>
        {% endif %}

        {% if registration_url and (date | isFuture) %}
        <div class="event-page__cta">
          <a href="{{ registration_url }}" class="btn btn--primary btn--lg" target="_blank" rel="noopener">Register for this event →</a>
        </div>
        {% endif %}
      </div>
    </article>
  </main>

  {% include "footer.njk" %}
  <script src="{{ '/js/main.js' | url }}"></script>
</body>
</html>
