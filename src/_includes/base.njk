<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title or site.name + " — " + site.fullName }}</title>
  <meta name="description" content="{{ description or site.description }}">

  <!-- Canonical URL -->
  <link rel="canonical" href="{{ site.url }}{{ page.url }}">

  <!-- Open Graph -->
  <meta property="og:title" content="{{ title or site.name + ' — ' + site.fullName }}">
  <meta property="og:description" content="{{ description or site.description }}">
  <meta property="og:url" content="{{ site.url }}{{ page.url }}">
  <meta property="og:type" content="website">
  <meta property="og:image" content="{{ site.url }}/images/tripy-og-img.png">
  <meta property="og:site_name" content="{{ site.fullName }}">

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="{{ title or site.name + ' — ' + site.fullName }}">
  <meta name="twitter:description" content="{{ description or site.description }}">
  <meta name="twitter:image" content="{{ site.url }}/images/tripy-og-img.png">
  
  <!-- Google search console -->
  <meta name="google-site-verification" content="UKL5MJi4MiCjH8PvvStdp7-Am3M3KixtCLKDTkHh5Tw" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&family=JetBrains+Mono:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500&display=swap" rel="stylesheet">

  <!-- CSS -->
  <link rel="stylesheet" href="{{ '/css/style.css' | url }}">

  <!-- Favicon -->
  <link rel="icon" type="image/png" href="{{ '/images/tripy-icon.png' | url }}">

  <!-- Structured Data -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "{{ site.fullName }}",
    "url": "{{ site.url }}",
    "logo": "{{ site.url }}/images/tripy-icon.png",
    "description": "{{ site.description }}",
    "sameAs": [
      "{{ site.links.telegram }}",
      "{{ site.links.github }}"
    ]
  }
  </script>
</head>
<body>
  {% include "announcement.njk" %}
  {% include "header.njk" %}

  <main>
    {{ content | safe }}
  </main>

  {% include "footer.njk" %}

  <script src="{{ '/js/main.js' | url }}"></script>
</body>
</html>
